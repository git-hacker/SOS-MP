/* pages/landing/index.wxss */

.homepage {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.homepage__assembly {
  flex-grow: 1;
}

.homepage__text {
  height: 150rpx;
  padding: 0 80rpx 120rpx;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  color: #FFF;
  font-size: 10pt;
  line-height: 15pt;
  text-align: center;
}


.homepage__safe-btn {
  position: fixed;
  bottom: 50rpx;
  left: 0;
  right: 0;
  z-index: 1000;
  margin: auto;
  color: rgba(255, 255, 255, .55);
  background: rgba(0, 178, 106, .5);
  font-size: 11pt;
  padding: 15rpx;
  width: 180rpx;
  height: 40rpx;
  margin-left: auto;
  margin-right: auto;
  text-align: center;
  border-radius: 3px;
}
